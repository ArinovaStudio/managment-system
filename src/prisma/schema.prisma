generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String            @id @default(cuid())
  employeeId      String?           @unique
  email           String            @unique
  isDev           Boolean?          @default(false)
  githubProfile   String?
  name            String
  password        String
  role            ROLES             @default(CLIENT)
  workingAs       String?
  department      String?
  phone           String?
  bio             String?
  image           String?
  dob             String?
  isLogin         Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  faceDescriptor  String?
  breaks          Break[]
  clockRecords    ClockRecord[]
  Documents       Docs[]            @relation("UserDocuments")
  meetingRequests MeetingRequest[]
  memo            Memo[]
  milestones      Milestone[]
  projectMembers  ProjectMember[]
  leaves          UserLeaves?
  timezone        UserTimezone?
  workHours       WorkHours[]
  featureRequests FeatureRequest[]
  createdMeetings Meeting[]         @relation("CreatedMeetings")
  meetingAssigned MeetingAttendee[]
  leaveRequests   leaveReq[]
  todoTasks       TodoTask[]
  comments        Comment[]
  workDone        workDone[]
}

model Docs {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  createdAt DateTime @default(now())
  userId    String?
  projectId String?
  Projects  Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  User      User?    @relation("UserDocuments", fields: [userId], references: [id], onDelete: Cascade)
}

model well {
  id       String @id @default(cuid())
  title    String
  answer   String
  category String @default("Tips")
  likes    Int    @default(0)
  dislikes Int    @default(0)
}

model WaterIntake {
  id        String   @id @default(cuid())
  userId    String
  amount    Int      @default(0)
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, date])
}

model feedback {
  id          String  @id @default(cuid())
  type        String
  rating      Int     @default(0)
  desc        String
  isAnynonyms Boolean @default(false)
  byName      String
  byEmpId     String
  employeeId  String?
}

model clientfeedback {
  id      String  @id @default(cuid())
  type    String
  project String?
  message String
  byName  String
  userId  String
  email   String?
}

model leaveReq {
  id         String   @id @default(cuid())
  status     STATUS   @default(Pending)
  empName    String
  empId      String
  department String
  leaveType  String
  startDate  DateTime
  endDate    DateTime
  reason     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Analytics {
  id            String   @id @default(cuid())
  quoteText     String?
  quoteAuthor   String?
  totalProjects Int      @default(0)
  pendingTasks  Int      @default(0)
  design        Int      @default(0)
  development   Int      @default(0)
  marketing     Int      @default(0)
  sales         Int      @default(0)
  support       Int      @default(0)
  analytics     Int      @default(0)
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())
}

model UserTimezone {
  id        String   @id @default(cuid())
  userId    String   @unique
  code      String
  name      String
  hours     String
  offset    String
  startTime String
  endTime   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserLeaves {
  id        String   @id @default(cuid())
  userId    String   @unique
  remaining Int      @default(8)
  emergency Int      @default(3)
  sick      Int      @default(5)
  total     Int      @default(8)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ClockRecord {
  id        String       @id @default(cuid())
  userId    String
  clockIn   DateTime?
  clockOut  DateTime?
  date      DateTime     @default(now())
  status    CLOCK_STATUS @default(NOT_LOGGED_IN)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model WorkHours {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  hours     Float
  clockIn   String
  clockOut  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  summary   String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model Break {
  id        String     @id @default(cuid())
  userId    String
  type      BREAK_TYPE
  startTime DateTime
  endTime   DateTime?
  duration  Int?
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startTime])
}

model Task {
  id             String    @id @default(cuid())
  title          String
  description    String
  assignee       String
  assigneeAvatar String?
  priority       String
  dueDate        DateTime
  employeeId     String?
  tags           String[]
  attachments    Json[]    @default([])
  status         String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  projectId      String?
  comments       Comment[]
  Project        Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Report {
  id         String   @id @default(cuid())
  message    String
  taskId     String?
  reportedBy String?
  createdAt  DateTime @default(now())
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  taskId    String
  userId    String
  createdAt DateTime @default(now())
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id              String           @id @default(cuid())
  name            String
  summary         String?
  priority        String?
  basicDetails    String?
  repository      String?
  status          Int              @default(0) // Progress percentage 0-100
  createdAt       DateTime         @default(now())
  progress        Int              @default(0)
  assets          Asset[]
  milestones      Milestone[]
  members         ProjectMember[]
  tasks           Task[]
  featureRequests FeatureRequest[]
  projectInfo     ProjectInfo?
  latestUpdates   LatestUpdate[]
  meetingRequest  MeetingRequest[]
  docs            Docs[]
  designSystem    DesignSystem?
  projectTechnology ProjectTechnology?
}

model LatestUpdate {
  id        String   @id @default(cuid())
  title     String
  date      String
  projectId String
  createdBy String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectMember {
  id        String  @id @default(cuid())
  projectId String
  userId    String
  role      String?
  isLeader  Boolean @default(false)
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Milestone {
  id          String           @id @default(cuid())
  projectId   String
  title       String
  description String?
  dueDate     DateTime
  status      MILESTONE_STATUS @default(PENDING)
  createdBy   String
  createdAt   DateTime         @default(now())
  creator     User             @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  project     Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Asset {
  id         String   @id @default(cuid())
  type       String
  url        String
  title      String
  uploadedBy String?
  userImage  String?
  createdAt  DateTime @default(now())
  projectId  String
  publicId   String?
  liveUrl    String?  // For live preview links
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Ticket {
  id               String   @id @default(cuid())
  projectId        String
  reportedBy       String
  reason           String
  blockedTeammates String[] @default([])
  createdAt        DateTime @default(now())
}

model UsefulTip {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  user      String
  tip       String
  createdAt DateTime @default(now())
}

model MeetingRequest {
  id          String   @id @default(cuid())
  reason      String
  meetDate    DateTime
  meetTime    String
  status      String   @default("pending")
  meetingLink String?
  createdBy   String?
  duration    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  memo        Memo[]
  clientId    String
  client      User     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Memo {
  id        String   @id @default(cuid())
  meetingId String
  message   String
  clientId  String
  totaltime String
  createdAt DateTime @default(now())

  client         User            @relation(fields: [clientId], references: [id], onDelete: Cascade)
  meetingRequest MeetingRequest? @relation(fields: [meetingId], references: [id], onDelete: Cascade)
}

model FeatureRequest {
  id          String   @id @default(cuid())
  clientId    String
  projectId   String
  title       String
  description String
  createdAt   DateTime @default(now())
  status      String   @default("pending")
  client      User     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectInfo {
  id              String   @id @default(cuid())
  projectId       String   @unique
  budget          Float
  clientName      String?
  projectType     String
  startDate       DateTime
  deadline        DateTime
  supervisorAdmin String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  Project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Certificate {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String
  publicId    String
  assignedTo  String?
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ROLES {
  ADMIN
  CLIENT
  EMPLOYEE
}

enum STATUS {
  Requested
  Pending
  Rejected
  Approved
}

enum CLOCK_STATUS {
  NOT_LOGGED_IN
  CLOCKED_IN
  CLOCKED_OUT
  ON_BREAK
}

enum BREAK_TYPE {
  COFFEE
  MEAL
  EMERGENCY
}

model Meeting {
  id          String   @id @default(cuid())
  title       String
  description String   @db.VarChar(150)
  scheduledAt DateTime
  meetingLink String?

  createdById String
  createdBy   User   @relation("CreatedMeetings", fields: [createdById], references: [id], onDelete: Cascade)

  attendees MeetingAttendee[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MeetingAttendee {
  id String @id @default(cuid())

  meetingId String
  userId    String

  meeting Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([meetingId, userId]) // prevents duplicate assignment
}

model SharedQuote {
  id         String   @id @default(cuid())
  quote      String
  author     String
  userId     String
  isApproved Boolean  @default(false)
  isSelected Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model CalendarEvent {
  id        String    @id @default(cuid())
  title     String
  date      DateTime
  type      EventType
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum EventType {
  HOLIDAY
  WORKDAY
}

model PerformanceRating {
  id            String   @id @default(cuid())
  userId        String
  newLearnings  Int      @default(5)
  speed         Int      @default(5)
  workQuality   Int      @default(5)
  leaves        Int      @default(5)
  communication Int      @default(5)
  feedback      Int      @default(5)
  ratedBy       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TodoTask {
  id          String   @id @default(cuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, completed])
}

model OtpVerification {
  id        String   @id @default(cuid())
  email     String
  otp       String
  type      OtpType
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email, type])
}

model PlanDocs {
  id        String   @id @default(nanoid())
  name      String   @default("United")
  content   String
  createdBy String
  createdAt DateTime @default(now())
}

model workDone {
  id        String   @id @default(nanoid())
  projectId String
  taskId   String    @unique
  title          String
  description    String
  priority       String
  dueDate        DateTime
  tags           String[]
  userId         String
  completedBy    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum OtpType {
  SIGNUP
  FORGOT_PASSWORD
  LOGIN
}

enum MILESTONE_STATUS {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
  DELAYED
}

model DesignSystem {
  id               String   @id @default(uuid())
  projectId        String   @unique
  project          Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  brandName        String 
  colors           String[]
  fonts            Json
  designType       String[]
  layoutStyle      Json
  contentTone      String[]
  visualGuidelines Json
  theme            String[]
  brandFeel        String
  keyPages         String[]
  uniqueness       Json
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model ProjectTechnology {
  id        String   @id @default(cuid())
  projectId String   @unique
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  design    String   @default("Figma")
  frontend  String   @default("Next.js")
  backend   String   @default("Next.js")
  database  String   @default("Postgres")
  server    String   @default("KVM2 -VPS")
  hosting   String   @default("Local")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
