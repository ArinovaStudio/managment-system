generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id String @id @default(nanoid())
}

model User {
  id              String           @id @default(cuid())
  employeeId      String?          @unique
  email           String           @unique
  name            String
  password        String
  role            ROLES            @default(CLIENT)
  workingAs       String?
  department      String?
  phone           String?
  bio             String?
  image           String?
  dob             String?
  isLogin         Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  faceDescriptor  String?
  breaks          Break[]
  clockRecords    ClockRecord[]
  Documents       Docs[]           @relation("UserDocuments")
  meetingRequests MeetingRequest[]
  milestones      Milestone[]
  projectMembers  ProjectMember[]

  leaves          UserLeaves?
  timezone        UserTimezone?
  workHours       WorkHours[]
  featureRequests FeatureRequest[]
  createdMeetings Meeting[]         @relation("CreatedMeetings")
  meetingAssigned MeetingAttendee[]
  leaveRequests   leaveReq[]
  todoTasks       TodoTask[]
  comments        Comment[]
}

model Docs {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  createdAt DateTime @default(now())
  userId    String?
  User      User?    @relation("UserDocuments", fields: [userId], references: [id])
}

model well {
  id       String @id @default(cuid())
  title    String
  answer   String
  likes    Int    @default(0)
  dislikes Int    @default(0)
}

model feedback {
  id          String  @id @default(cuid())
  type        String
  rating      Int     @default(0)
  desc        String
  isAnynonyms Boolean @default(false)
  byName      String
  byEmpId     String
  employeeId  String?
}

model leaveReq {
  id         String   @id @default(cuid())
  status     STATUS   @default(Pending)
  empName    String
  empId      String
  department String
  leaveType  String
  startDate  DateTime
  endDate    DateTime
  reason     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String

  user User? @relation(fields: [userId], references: [id])
}

model Analytics {
  id            String   @id @default(cuid())
  quoteText     String?
  quoteAuthor   String?
  totalProjects Int      @default(0)
  pendingTasks  Int      @default(0)
  design        Int      @default(0)
  development   Int      @default(0)
  marketing     Int      @default(0)
  sales         Int      @default(0)
  support       Int      @default(0)
  analytics     Int      @default(0)
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())
}

model UserTimezone {
  id        String   @id @default(cuid())
  userId    String   @unique
  code      String
  name      String
  hours     String
  offset    String
  startTime String
  endTime   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserLeaves {
  id        String   @id @default(cuid())
  userId    String   @unique
  remaining Int      @default(10)
  emergency Int      @default(10)
  sick      Int      @default(10)
  total     Int      @default(30)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ClockRecord {
  id        String       @id @default(cuid())
  userId    String
  clockIn   DateTime?
  clockOut  DateTime?
  date      DateTime     @default(now())
  status    CLOCK_STATUS @default(NOT_LOGGED_IN)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model WorkHours {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  hours     Float
  clockIn   String
  clockOut  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  summary   String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model Break {
  id        String     @id @default(cuid())
  userId    String
  type      BREAK_TYPE
  startTime DateTime
  endTime   DateTime?
  duration  Int?
  isActive  Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startTime])
}

model Task {
  id             String    @id @default(cuid())
  title          String
  description    String
  assignee       String
  assigneeAvatar String?
  priority       String
  dueDate        DateTime
  tags           String[]
  attachments    Json[]    @default([])
  status         String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  projectId      String?
  comments       Comment[]
  Project        Project?  @relation(fields: [projectId], references: [id])
}

model Report {
  id         String   @id @default(cuid())
  message    String
  taskId     String?
  reportedBy String?
  createdAt  DateTime @default(now())
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  taskId    String
  userId    String
  createdAt DateTime @default(now())
  task      Task     @relation(fields: [taskId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Project {
  id              String           @id @default(cuid())
  name            String
  summary         String?
  priority        String?
  basicDetails    String?
  status          Int              @default(0) // Progress percentage 0-100
  createdAt       DateTime         @default(now())
  progress        Int              @default(0)
  assets          Asset[]
  milestones      Milestone[]
  members         ProjectMember[]
  tasks           Task[]
  featureRequests FeatureRequest[]
  projectInfo     ProjectInfo?
  latestUpdates   LatestUpdate[]
}

model LatestUpdate {
  id        String   @id @default(cuid())
  title     String
  date      String
  projectId String
  createdBy String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])
}

model ProjectMember {
  id        String  @id @default(cuid())
  projectId String
  userId    String
  role      String?
  isLeader  Boolean @default(false)
  project   Project @relation(fields: [projectId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
}

model Milestone {
  id          String   @id @default(cuid())
  projectId   String
  title       String
  description String?
  dueDate     DateTime
  createdBy   String
  createdAt   DateTime @default(now())
  creator     User     @relation(fields: [createdBy], references: [id])
  project     Project  @relation(fields: [projectId], references: [id])
}

model Asset {
  id        String   @id @default(cuid())
  projectId String
  type      String
  url       String
  publicId  String
  title     String?
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])
}

model Ticket {
  id         String   @id @default(cuid())
  projectId  String
  reportedBy String
  reason     String
  createdAt  DateTime @default(now())
}

model UsefulTip {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  user      String
  tip       String
  createdAt DateTime @default(now())
}

model MeetingRequest {
  id        String   @id @default(cuid())
  clientId  String
  reason    String
  meetDate  DateTime
  meetTime  String
  duration  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  client    User     @relation(fields: [clientId], references: [id])
}

model FeatureRequest {
  id          String   @id @default(cuid())
  clientId    String
  projectId   String
  title       String
  description String
  createdAt   DateTime @default(now())

  client  User    @relation(fields: [clientId], references: [id])
  project Project @relation(fields: [projectId], references: [id])
}

model ProjectInfo {
  id              String   @id @default(cuid())
  projectId       String   @unique
  budget          Float
  clientName      String?
  projectType     String
  startDate       DateTime
  deadline        DateTime
  supervisorAdmin String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  Project Project @relation(fields: [projectId], references: [id])
}

model Certificate {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String
  publicId    String
  assignedTo  String?
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ROLES {
  ADMIN
  CLIENT
  EMPLOYEE
}

enum STATUS {
  Requested
  Pending
  Rejected
  Approved
}

enum CLOCK_STATUS {
  NOT_LOGGED_IN
  CLOCKED_IN
  CLOCKED_OUT
  ON_BREAK
}

enum BREAK_TYPE {
  COFFEE
  MEAL
  EMERGENCY
}

model Meeting {
  id          String   @id @default(cuid())
  title       String
  description String   @db.VarChar(150)
  scheduledAt DateTime
  meetingLink String?

  createdById String
  createdBy   User   @relation("CreatedMeetings", fields: [createdById], references: [id])

  attendees MeetingAttendee[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MeetingAttendee {
  id String @id @default(cuid())

  meetingId String
  userId    String

  meeting Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([meetingId, userId]) // prevents duplicate assignment
}

model SharedQuote {
  id         String   @id @default(cuid())
  quote      String
  author     String
  userId     String
  isApproved Boolean  @default(false)
  isSelected Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model CalendarEvent {
  id        String    @id @default(cuid())
  title     String
  date      DateTime
  type      EventType
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum EventType {
  HOLIDAY
  WORKDAY
}

model PerformanceRating {
  id            String   @id @default(cuid())
  employeeId    String
  newLearnings  Int      @default(5)
  speed         Int      @default(5)
  workQuality   Int      @default(5)
  leaves        Int      @default(5)
  communication Int      @default(5)
  feedback      Int      @default(5)
  ratedBy       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TodoTask {
  id          String   @id @default(cuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, completed])
}

model OtpVerification {
  id        String   @id @default(cuid())
  email     String
  otp       String
  type      OtpType
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([email, type])
}

enum OtpType {
  SIGNUP
  FORGOT_PASSWORD
}
